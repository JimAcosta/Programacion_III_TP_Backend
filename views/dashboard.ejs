<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Panel de Administración</title>
  <link rel="stylesheet" href="/css/estilos.css" />
</head>
<body>
  <h1>Panel de Administración - Productos</h1>

  <table border="1" cellpadding="10" cellspacing="0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Tipo</th>
        <th>Imagen</th>
        <th>Estado</th>
        <th>Acciones</th> 
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(producto => { %>
        <tr>
          <td><%= producto.id %></td>
          <td><%= producto.nombre %></td>
          <td><%= producto.precio %></td>
          <td><%= producto.tipo %></td>
          <td>
            <% if (producto.imagen) { %>
              <img src="<%= encodeURI(producto.imagen) %>" alt="Imagen del producto" width="100" />
            <% } else { %>
              Sin imagen
            <% } %>
          </td>
          <td>
            <% if (producto.activo === 1) { %>
              <span style="color: green;">Activo</span>
            <% } else { %>
              <span style="color: red;">Inactivo</span>
            <% } %>
          </td>
          <td>
            <a href="/admin/producto/editar/<%= producto.id %>">
              <button>Modificar</button>
            </a>

            <% if (producto.activo === 1) { %>
              <form action="/admin/producto/baja/<%= producto.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('¿Confirmás dar de baja este producto?');">Dar baja</button>
              </form>
            <% } else { %>
              <form action="/admin/producto/alta/<%= producto.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('¿Dar de alta este producto?');">Dar alta</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/admin/producto/nuevo">
    <button>Agregar Producto</button>
  </a>
</body>
</html>
